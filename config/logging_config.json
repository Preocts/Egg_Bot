{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "simple": {
            "format": "%(asctime)s - %(module)s - %(levelname)s - %(message)s"
        }
    },
    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "DEBUG",
            "formatter": "simple",
            "stream": "ext://sys.stdout"
        },
        "single_run_handler": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "DEBUG",
            "formatter": "simple",
            "filename": "./logs/single_logs.log",
            "mode": "w",
            "encoding": "utf8"
        },
        "full_log_handler": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "DEBUG",
            "formatter": "simple",
            "filename": "./logs/full_logs.log",
            "maxBytes": 10485760,
            "backupCount": 5,
            "encoding": "utf8"
        }
    },
    "loggers": {
        "protocol": {
            "level": "ERROR",
            "handlers": [
                "console",
                "single_run_handler",
                "full_log_handler"
            ]
        },
        "gateway": {
            "level": "ERROR",
            "handlers": [
                "console",
                "single_run_handler",
                "full_log_handler"
            ]
        },
        "client": {
            "level": "ERROR",
            "handlers": [
                "console",
                "single_run_handler",
                "full_log_handler"
            ]
        }
    },
    "root": {
        "level": "DEBUG",
        "handlers": [
            "console",
            "single_run_handler",
            "full_log_handler"
        ]
    }
}